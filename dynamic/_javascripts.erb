<script src="/js/libs/jquery.colorbox-min.js"></script>

<script>
  $(function() {
    $("a[rel='colorbox']").colorbox();
    $.scrollTo( 0 );
    
    // ScrollTo animation	
		$(".menu a, .arrows a").click(function(el, e) {
		  var target = $(this).attr('href');
		  var position = $(target).position();
		  $.scrollTo({ top: position.top, left: 0}, 800);
		});
  });
</script>

